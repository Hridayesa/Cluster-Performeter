<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="cache" class="org.vs.performeter.geode.GeodeFactory" factory-method="createClientCache">
        <constructor-arg index="0" value="${geode.host}"/>
        <constructor-arg index="1" value="${geode.port}"/>
    </bean>

    <bean id="region" class="org.vs.performeter.geode.GeodeFactory" factory-method="createRegion">
        <constructor-arg index="0" ref="cache"/>
        <constructor-arg index="1" value="${geode.testregion.type}"/>
        <constructor-arg index="2" value="${geode.testregion.name}"/>
    </bean>

    <bean id="analyser" class="org.vs.performeter.geode.GeodeAnalyser"/>

    <bean id="tester" class="org.vs.performeter.geode.GeodeTester">
        <property name="maxNumber" value="${maxNamberOfCacheElements}"/>
    </bean>

</beans>