<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="testMap" factory-bean="hazelcast" factory-method="getMap">
        <constructor-arg value="testMap"/>
    </bean>

    <bean id="analyser" class="org.vs.performeter.hzcache.orchestrator.HazelcastCacheTestAnalyser"/>

    <bean id="tester" class="org.vs.performeter.tester.HazelcastCacheTest">
        <property name="maxNumber" value="${maxNamberOfCacheElements}"/>
    </bean>

</beans>